# Basic engine properties
begin engine
name engine
# max min_force > max_force to flip the sense of the controlling channel
min_force 0   # force in Newtons for when control is min
max_force 70  # force in Newtons (mass * 10 * 2) for when control is max
max_airspeed 80 # airspeed (m/s) at which the engine becomes useless
position_x -1
control_per_chan_3 1 # indicates what channel is used for this engine
smoke_rate_scale 0.6
end engine

begin engine
name engine_stabiliser
# max min_force > max_force to flip the sense of the controlling channel
min_force 2.5   # force in Newtons for when control is min
max_force 0  # force in Newtons 
max_airspeed 120 # airspeed (m/s) at which the engine becomes useless
position_x 0
position_z 3
direction_x 0
direction_z 1
absolute_direction true
do_smoke false
end engine

begin engine
name engine_stabiliser2
# max min_force > max_force to flip the sense of the controlling channel

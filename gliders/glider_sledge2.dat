end engine

# Aerofoils are understood by aero, structure and graphics

begin aerofoil
name wing_mid
position_x      0.0   # central x location
position_y      0.0    # central y location
position_z      0      # central z location
offset_forward  0.055  # x offset when flying forward
offset_stalled  0      # x offset when stalled
offset_reverse -0.055  # x offset when flying in reverse
chord           2.0    # distance from leading to trailing edge
span            1.0    # total span of aerofoil segment
rotation        0      # Rot about x-axis (+ve for dihedral on left)
inc             0      # Angle of inclination, after rotation above
CL_drop_scale   0.4    # CL drops to this fraction of CL_max at stall
CL_rev_scale    0.5    # CL is scaled by this when flying in reverse
CL_per_alpha    0.0    # CL change with alpha in units per deg
CL_0            0.0    # CL at alpha = 0: +ve for a wing aerofoil
CL_max          0.000001    # CL_max : stall at CL_max / CL_per_alpha
CL_min         -0.000001    # CL_min
CD_prof         0.000   # profile drag
CD_induced_frac 0.00  # so that CD_induced = CL * CL * CD_induced_frac
CD_max          0.00      # CD for when wind hits this aerofoil at 90 deg
CM_0            0.0    # Pitching moment when alpha = 0
CL_per_deg      0.00   # change in CL (of whole graph) with control 
CD_prof_per_deg 0.003  # increase in CD_prof with control
CM_per_deg     -0.0    # Pitching moment (about 1/4 chord) with control 
inc_per_deg     0.0    # effective rotation of aerofoil with control
control_per_chan_1  0      # control per joystick x
control_per_chan_2  30      # control per joystick y
end aerofoil

begin aerofoil
copy wing_mid
name fin
position_x     -1.0
position_y      0
position_z      0.3
offset_forward  0.035
offset_stalled  0
offset_reverse -0.035
chord           0.14
span            0.6
rotation       90
inc             0
CL_per_alpha    0.1
CL_0            0.0
CL_max          1.4
CL_min         -1.4
CL_per_deg      0.02
CD_prof_per_deg 0.005  # increase in CD_prof with control
inc_per_deg     0.6
control_per_chan_1  -25
control_per_chan_2  0
control_per_chan_4  -25
end aerofoil

